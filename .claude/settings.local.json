{
  "permissions": {
    "allow": [
      "Bash(brew upgrade:*)",
      "Bash(claude --version)",
      "Bash(brew update:*)",
      "Bash(brew info:*)",
      "Bash(npm view:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(xargs:*)",
      "Bash(tree:*)",
      "Bash(chmod:*)",
      "WebSearch",
      "Bash(echo:*)",
      "Bash(python3 .claude/scripts/refresh.py:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm db:*)",
      "Bash(cd app && pnpm lint:*)",
      "Bash(cd app && pnpm type-check:*)",
      "Bash(cd app && pnpm test:*)",
      "Bash(cd app && pnpm build:*)",
      "Bash(cd app && pnpm db:*)",
      "Bash(wc:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(pnpm db:reset:*)",
      "Bash(pnpm db:gen:*)",
      "Bash(pnpm add:*)",
      "Bash(cat:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "supabase",
    "notion"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-migration-guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-lint-fix.sh"
          }
        ]
      }
    ]
  }
}
